<div class="card" style="width: 18rem;">
  <%= image_tag "moon.jpeg", alt: "card picture", height: 200, width: "auto" %>
  <div class="card-body">
    <h5 class="card-title"><%= bookmark.movie.title %></h5>
    <h6 class="card-text"><%= bookmark.movie.rating %></h6>
    <p><%= bookmark.movie.overview %></p>
    <p><%= bookmark.comment %></p>
    <%= link_to 'delete', lists_path, class: 'btn btn-danger' %>
  </div>
</div>
